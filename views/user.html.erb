      </div>
      
      
      
      <div class="row-fluid collapse in" id="advanced-options">
        <div class="span4">
          <fieldset>
            <legend>Publishing</legend>
            <label>Publish At</label>
            <input type="date" placeholder="Date">
            <label>Publish Unitll</label>
            <input type="date" placeholder="Date">
            <label>Version Message</label>
            <input type="text" placeholder="Date">
          </fieldset>
        </div><!-- Span 4 -->
        <div class="span4">
          <fieldset>
            <legend>User Permissions</legend>
            <label class="control-label" for="input01">Update</label>
            <input type="text" class="span3" id="input01">
            <label class="control-label" for="input01">Publish</label>
            <input type="text" class="span3" id="input01">
            <label class="control-label" for="input01">Delete</label>
            <input type="text" class="span3" id="input01">
            <label class="control-label" for="input01">View</label>
            <input type="text" class="span3" id="input01">
          </fieldset>
        </div><!-- Span 4 -->
        <div class="span4">
          <fieldset>
            <legend>Node Options</legend>
            <label class="control-label" for="input01">Browser Title</label>
            <input type="text" class="span3" id="input01">
            <label class="control-label" for="input01">URL</label>
            <input type="text" class="span3" id="input01">
            <label class="control-label" for="input01">Parent</label>
            <select class="span3" id="input01">
              <option>Option 1</option>
              <option>Option 2</option>
              <option>Option 3</option>
            </select>
          </fieldset>
        </div><!-- Span 4 -->
        
      </div>
      
      <button type="submit" class="btn btn-success btn-large">Publish</button>
      <button type="submit" class="btn btn-warning btn-large">Save as Draft</button>
      <button class="btn btn-danger pull-right btn-large">Cancel</button>

    </form>
